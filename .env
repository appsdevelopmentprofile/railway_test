# Microsoft Graph API credentials for Outlook Listener
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_TENANT_ID=your_outlook_tenant_id

# OCR Processor (Tesseract) - no environment variables needed here unless configured differently

# OpenAI API key for Generative AI report generation
OPENAI_API_KEY=your_openai_api_key

# Cloud Storage credentials
# AWS S3 (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Google Cloud Storage (if using GCP)
GOOGLE_CLOUD_KEY=your_google_cloud_service_account_key_path

# OneDrive (if using Microsoft Graph API for OneDrive)
ONEDRIVE_CLIENT_ID=your_onedrive_client_id
ONEDRIVE_CLIENT_SECRET=your_onedrive_client_secret
ONEDRIVE_TENANT_ID=your_onedrive_tenant_id

# Email Sending Service credentials
# For SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# For SMTP (if using SMTP server directly)
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_HOST=smtp.your_email_provider.com
SMTP_PORT=587  # or 465, depending on the provider's SMTP configuration

# Port configuration (for Railway deployment)
PORT=8000
